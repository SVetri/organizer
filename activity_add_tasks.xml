<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66FF66"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddTasks" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/addbutton"
        android:textSize="30sp" />

    <TextView 
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/taskdisc"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="30dp"/>
    
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/deschint">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:textSize="20sp"
        android:text="@string/datepick"
        android:layout_marginTop="30dp"/>

    <TextView 
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView3"/>
    
    <Button 
        android:id="@+id/changedate"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/textView4"
        android:text="@string/changedatebutton"
        android:layout_marginTop="20dp"/>
    
    <Button 
        android:id="@+id/savetask"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/changedate"
        android:layout_marginTop="30dp"
        android:text="@string/stask"/>

</RelativeLayout>